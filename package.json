{
  "name": "vue-seamless-autoscroll",
  "version": "1.1.0",
  "description": "A Vue 3 auto scroll component with seamless loop, hover pause, wheel control, and single step mode support",
  "main": "dist/vue-seamless-autoscroll.umd.js",
  "module": "dist/vue-seamless-autoscroll.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/vue-seamless-autoscroll.es.js",
      "require": "./dist/vue-seamless-autoscroll.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "keywords": [
    "vue",
    "vue3",
    "auto",
    "scroll",
    "auto-scroll",
    "seamless",
    "loop",
    "component",
    "vue-seamless-autoscroll"
  ],
  "author": "heming",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:rollup": "rollup -c",
    "build:vite": "vite build",
    "dev": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md}\""
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-vue": "^6.0.0-beta.10",
    "sass": "^1.70.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vite": "^7.2.7",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/984507092/vue-auto-scroll.git"
  },
  "bugs": {
    "url": "https://github.com/984507092/vue-auto-scroll/issues"
  },
  "homepage": "https://github.com/984507092/vue-auto-scroll/tree/master"
}
