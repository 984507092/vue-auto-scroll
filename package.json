{
  "name": "vue-seamless-autoscroll",
  "version": "1.0.4",
  "description": "A Vue 3 auto scroll component with seamless loop, hover pause, wheel control, and single step mode support",
  "main": "dist/vue3-auto-scroll.umd.js",
  "module": "dist/vue3-auto-scroll.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/vue3-auto-scroll.es.js",
      "require": "./dist/vue3-auto-scroll.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "keywords": [
    "vue",
    "vue3",
    "auto",
    "scroll",
    "auto-scroll",
    "seamless",
    "loop",
    "component"
  ],
  "author": "heming",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md}\""
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass": "^1.70.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/984507092/vue3-auto-scroll.git"
  },
  "bugs": {
    "url": "https://github.com/984507092/vue3-auto-scroll/issues"
  }
}
